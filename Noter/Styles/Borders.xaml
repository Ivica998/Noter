    -->

    <Style TargetType="{x:Type Border}" x:Key="IndicatorBorder">
        <Setter Property="BorderBrush" Value="{StaticResource Dark}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource Button_Hovered_FG}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>